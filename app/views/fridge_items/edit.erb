<h2>Edit Item</h2>


<form action="/fridge_items/<%= @item.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <br><br>
  <label for="name">Item Name:</label>    
  <input type="text" name="name" value="<%= @item.name %>" placeholder="Chicken"><br>
  <label for= "expy_date">Expiration Date:</label>
  <input type="text" name= "expy_date" value="<%= @item.expy_date %>" placeholder="9-15-20">
  <br>
  <input type="submit" value="Update Item">
</form>
<br><br>

<form action="/fridge_items/<%= @item.id %>" method="POST">
